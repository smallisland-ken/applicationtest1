<!DOCTYPE html>
<html>
  <head>
    <title>BOOK</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% flash.each do |message_type, message| %>
      <p style="color:green"><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
